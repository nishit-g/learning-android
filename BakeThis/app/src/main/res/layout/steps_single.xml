<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="8sp">

    <TextView
        android:id="@+id/tv_step_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="This is a list of ingredients"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:padding="4sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/horizontal_line"
        app:layout_constraintEnd_toStartOf="@id/tv_read_watch"
        app:layout_constraintHorizontal_bias="0"/>

    <TextView
        android:id="@+id/tv_read_watch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Read/Watch"
        android:textSize="20sp"
        android:textColor="@color/yellowOrange"
        android:textStyle="bold"
        android:padding="4sp"
        app:layout_constraintStart_toEndOf="@id/tv_step_desc"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintBottom_toBottomOf="@id/horizontal_line"/>

    <View
        android:id="@+id/horizontal_line"
        android:layout_width="match_parent"
        android:background="@color/black"
        android:layout_height="1dp"
        android:layout_marginRight="8sp"
        app:layout_constraintTop_toBottomOf="@id/tv_step_desc"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="8sp" />

</androidx.constraintlayout.widget.ConstraintLayout>